<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment" >

    <ImageView
        android:id="@+id/AppIcon"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="45dp"
        app:layout_constraintEnd_toStartOf="@+id/Welcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/connect" />

    <TextView
        android:id="@+id/Welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/sfbold"
        android:text="Welcome"
        android:textColor="#000000"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="50dp"
        android:fontFamily="@font/sfbold"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@+id/Welcome"
        app:layout_constraintStart_toStartOf="@+id/Welcome"
        app:layout_constraintTop_toBottomOf="@+id/Welcome" />

    <TextView
        android:id="@+id/namaortu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/sfbold"
        android:text="'s Parent"
        android:textColor="#000000"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/tvName"
        app:layout_constraintTop_toBottomOf="@+id/Welcome" />

    <ImageView
        android:id="@+id/notifhome"
        android:layout_width="43dp"
        android:layout_height="39dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Welcome"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/notif" />

    <ImageView
        android:id="@+id/pengumuman"
        android:layout_width="330dp"
        android:layout_height="80dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/namaortu"
        app:srcCompat="@drawable/bg_annc" />

    <TextView
        android:id="@+id/txtPengumuman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/sfbold"
        android:text="Pengumuman"
        android:textColor="#000000"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@+id/pengumuman"
        app:layout_constraintTop_toTopOf="@+id/pengumuman" />

    <TextView
        android:id="@+id/tvAnnouncement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:fontFamily="@font/sfmedium"
        android:text="TextView"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/pengumuman"
        app:layout_constraintStart_toStartOf="@+id/pengumuman"
        app:layout_constraintTop_toBottomOf="@+id/txtPengumuman" />

    <ImageView
        android:id="@+id/aktivitas"
        android:layout_width="330dp"
        android:layout_height="247dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pengumuman"
        app:srcCompat="@drawable/tdyact" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/sfbold"
        android:text="Aktivitas Hari Ini"
        android:textColor="#000000"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@+id/aktivitas"
        app:layout_constraintTop_toTopOf="@+id/aktivitas" />

    <TextView
        android:id="@+id/tvTodayActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/sfbold"
        android:text="TextView"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@+id/aktivitas"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/tvTimeActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/sfmedium"
        android:text="TextView"
        android:textAlignment="viewEnd"
        android:textColor="@color/black"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="@+id/aktivitas"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <ImageView
        android:id="@+id/ivBanner"
        android:layout_width="304dp"
        android:layout_height="201dp"
        android:rotation="90"
        app:layout_constraintBottom_toBottomOf="@+id/aktivitas"
        app:layout_constraintEnd_toEndOf="@+id/aktivitas"
        app:layout_constraintStart_toStartOf="@+id/aktivitas"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:srcCompat="@drawable/car" />

    <ImageView
        android:id="@+id/jadwal"
        android:layout_width="330dp"
        android:layout_height="160dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/bgshce"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aktivitas" />

    <TextView
        android:id="@+id/txtJadwal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="Jadwal"
        android:fontFamily="@font/sfbold"
        android:textSize="15dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/jadwal"
        app:layout_constraintTop_toTopOf="@+id/jadwal" />

    <ImageButton
        android:id="@+id/homepemgedung"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="10dp"
        app:layout_constraintEnd_toStartOf="@+id/homepemspp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jadwal"
        app:srcCompat="@drawable/shrtc" />

    <ImageView
        android:id="@+id/homegedung"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="@+id/homepemgedung"
        app:layout_constraintStart_toStartOf="@+id/homepemgedung"
        app:layout_constraintTop_toTopOf="@+id/homepemgedung"
        app:srcCompat="@drawable/building" />

    <TextView
        android:id="@+id/txtpemgedung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/sfmedium"
        android:text="Pembayaran Gedung"
        android:textColor="#19A5AF"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="@+id/homepemgedung"
        app:layout_constraintStart_toStartOf="@+id/homepemgedung"
        app:layout_constraintTop_toBottomOf="@+id/homegedung" />

    <ImageButton
        android:id="@+id/homepemspp"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jadwal"
        app:srcCompat="@drawable/shrtc" />

    <ImageView
        android:id="@+id/homespp"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="@+id/homepemspp"
        app:layout_constraintStart_toStartOf="@+id/homepemspp"
        app:layout_constraintTop_toTopOf="@+id/homepemspp"
        app:srcCompat="@drawable/spp" />

    <TextView
        android:id="@+id/txtpemspp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/sfmedium"
        android:text="Pembayaran SPP"
        android:textColor="#19A5AF"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="@+id/homepemspp"
        app:layout_constraintStart_toStartOf="@+id/homepemspp"
        app:layout_constraintTop_toBottomOf="@+id/homespp" />

    <ImageButton
        android:id="@+id/homeriwayat"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/homepemspp"
        app:layout_constraintTop_toBottomOf="@+id/jadwal"
        app:srcCompat="@drawable/shrtc" />

    <ImageView
        android:id="@+id/homelogoriwayat"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="@+id/homeriwayat"
        app:layout_constraintStart_toStartOf="@+id/homeriwayat"
        app:layout_constraintTop_toTopOf="@+id/homeriwayat"
        app:srcCompat="@drawable/riwayat" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/sfmedium"
        android:text="Riwayat Pembayaran"
        android:textColor="#19A5AF"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="@+id/homeriwayat"
        app:layout_constraintStart_toStartOf="@+id/homeriwayat"
        app:layout_constraintTop_toBottomOf="@+id/homelogoriwayat" />

</androidx.constraintlayout.widget.ConstraintLayout>