<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2EEEE"
    tools:context=".fragments.PembayaranFragmentOrtu" >

    <ImageView
        android:id="@+id/topbarpembayaran"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        android:src="@drawable/bg_payment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/backpembayaran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="25dp"
        android:background="@drawable/back"
        app:layout_constraintBottom_toBottomOf="@+id/topbarpembayaran"
        app:layout_constraintStart_toStartOf="@+id/topbarpembayaran"
        app:layout_constraintTop_toTopOf="@id/topbarpembayaran"/>

    <ImageView
        android:id="@+id/logopembayaran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/logo_kartika_pradana"
        app:layout_constraintBottom_toBottomOf="@+id/topbarpembayaran"
        app:layout_constraintEnd_toEndOf="@+id/topbarpembayaran"
        app:layout_constraintStart_toStartOf="@+id/topbarpembayaran"
        app:layout_constraintTop_toTopOf="@+id/topbarpembayaran" />

    <ImageButton
        android:id="@+id/notifpembayaran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="45dp"
        android:background="@drawable/notif_white"
        app:layout_constraintBottom_toBottomOf="@+id/topbarpembayaran"
        app:layout_constraintEnd_toEndOf="@+id/topbarpembayaran"
        app:layout_constraintTop_toTopOf="@id/topbarpembayaran"/>

    <TextView
        android:id="@+id/txtupload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Upload Bukti Pembayaran"
        android:layout_marginTop="50dp"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/topbarpembayaran"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Area Upload -->
    <LinearLayout
        android:id="@+id/uploadArea"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/upload_area_background"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@+id/txtupload">

        <ImageView
            android:id="@+id/uploadIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/upload"
            android:visibility="visible" />

        <TextView
            android:id="@+id/uploadText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unggah Bukti Transfer Anda"
            android:textColor="#757575"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/uploadedFileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BuktiTransfer.png"
            android:textColor="#000000"
            android:textSize="14sp"
            android:visibility="gone" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/btnLanjut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:background="@drawable/tombol_simpan"
        android:paddingHorizontal="24dp"
        android:paddingVertical="12dp"
        android:text="Lanjutkan"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uploadArea" />

    <TextView
        android:id="@+id/txtkirim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Lanjutkan"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/btnLanjut"
        app:layout_constraintStart_toStartOf="@+id/btnLanjut"
        app:layout_constraintTop_toTopOf="@+id/btnLanjut"
        app:layout_constraintBottom_toBottomOf="@+id/btnLanjut"/>

</androidx.constraintlayout.widget.ConstraintLayout>